<%= form_with(model: game) do |form| %>
  <%= form.hidden_field :player_id, value: @player_id %> 
  <% if game.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Choose an Opponent for this game</legend>
    <div>
      <%= form.label :opponent_andi, "Andi", style: "display: block" %>
      <%= form.radio_button :opponent, "Andi" %>
      <%= form.label :opponent_ruby, "Ruby", style: "display: block" %>
      <%= form.radio_button :opponent, "Ruby" %>
      <%= form.label :opponent_vai, "VAI", style: "display: block" %>
      <%= form.radio_button :opponent, "VAI" %>
    </div>
  </fieldset>
  <fieldset>
    <legend>Choose a Communication Channel for this game</legend>
    <div>
      <%= form.label :channel_voice, "Voice Call", style: "display: block" %>
      <%= form.radio_button :channel, "voice" %>
      <%= form.label :channel_sms, "SMS", style: "display: block" %>
      <%= form.radio_button :channel, "sms" %>
    </div>
  </fieldset>

  <div>
    <%= form.submit %>
  </div>
<% end %>
