<%= form_with(model: game) do |form| %>
  <% if game.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :opponent, style: "display: block" %>
    <%= form.text_field :opponent %>
  </div>
  <fieldset>
    <legend>Choose a Communication Channel for this game</legend>
    <div>
      <%= form.label :channel_phone, "Phone", style: "display: block" %>
      <%= form.radio_button :channel, "phone" %>
      <%= form.label :channel_sms, "SMS", style: "display: block" %>
      <%= form.radio_button :channel, "sms" %>
    </div>
  </fieldset>

  <div>
    <%= form.submit %>
  </div>
<% end %>
